<div class="container mx-auto">
  <h1 class="text-5xl font-bold my-4 text-center">PRODUCTOS</h1>
  <div class="grid grid-cols-3 gap-4" id="product-list">
    {{#each products}}
      <div class="bg-white rounded-lg shadow-lg p-6 m-4">
        <h2 class="text-xl font-bold mb-2">{{title}}</h2>
        <p class="text-gray-600">{{description}}</p>
        <p class="text-green-600 font-bold mt-4">${{price}}</p>
      </div>
    {{/each}}
  </div>
  <div class="inline-flex">
  <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-l" id="nextPage">
    Anterior
  </button>
  <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-r" id="prevPage">
    Siguiente
  </button>
</div>
</div>

<script src="/js/products.js"></script>